<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="bank">

		<!-- Define mapping entities -->
        <class>com.belhard.webappbank.entity.Accounts</class>
        <class>com.belhard.webappbank.entity.Cards</class>
        <class>com.belhard.webappbank.entity.ClientInf</class>
        <class>com.belhard.webappbank.entity.Clients</class>
        <class>com.belhard.webappbank.entity.Refill</class>
        <class>com.belhard.webappbank.entity.Transfers</class>

        <properties>
			<!-- Hibernate properties -->
			<property name="hibernate.format_sql" value="true" />
        </properties>

    </persistence-unit>

</persistence>